{
    "explorer.confirmDragAndDrop": false,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    // Yes, I'm smart enough to not donwload garbage in the first place, but once I've
    // downloaded something I would like to be able to just open it
    "security.workspace.trust.enabled": false,
    // Never worked in the first place
    "nim.enableNimsuggest": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "nim.lintOnSave": false,
    "githubPullRequests.queries": [
        {
            "label": "Waiting For My Review",
            "query": "is:open review-requested:${user}"
        },
        {
            "label": "Assigned To Me",
            "query": "is:open assignee:${user}"
        },
        {
            "label": "All PRs",
            "query": "sort:updated-desc"
        },
        {
            "label": "Created By Me",
            "query": "is:open author:${user}"
        }
    ],
    // Stop the buzz
    "extensions.ignoreRecommendations": true,
    "update.mode": "none",
    "csharp.suppressDotnetInstallWarning": true,
    "workbench.colorTheme": "High Contrast Theme",
    // What else?
    "cmake.configureOnOpen": true,
    "editor.fontFamily": "'Iosevka', 'monospace', monospace",
    // Because neovim extension is used
    "editor.lineNumbers": "relative",
    "files.autoSave": "onFocusChange",
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.formatOnType": true
    },
    // In most cases it is pretty useless
    "editor.minimap.enabled": false,
    "redhat.telemetry.enabled": false,
    // Automatically pick up schema files from the workspace roots if possible
    "xml.fileAssociations": [
        {
            "pattern": "**/*.xml",
            "systemId": "schema.xsd"
        }
    ],
    "githubPullRequests.terminalLinksHandler": "github",
    "xml.server.vmargs": "-Xmx128M",
    "workbench.tree.indent": 4,
    "editor.tabSize": 2,
    "githubPullRequests.terminalLinksHandler": "github",
    "xml.server.vmargs": "-Xmx128M",
    "workbench.tree.indent": 4,
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
    "todo-tree.filtering.ignoreGitSubmodules": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "QUESTION",
        "NOTE",
        "IMPLEMENT",
        "TEMP"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "githubPullRequests.pullBranch": "never",
    "editor.renderWhitespace": "none"
}
